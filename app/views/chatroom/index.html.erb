<h2 class="ui center aligned medium icon header">
  <i class="comment green outline icon"></i>
  Chatter
</h2>

<div class="ui two column grid  ">
  <div class="twelve wide column ">
  <div class="ui fluid  card chatbox ">
      <div class="content ">
        <div class="ui feed" >
          <div class="event" >
            <div class="content" id="scroller" >
              <div class="summary" >
                <div class="ui cards">
                  <div class="raised card" id="message-container">
                    <%= render @messages %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <div class="extra content">
    <%= form_for(@message, html: {class: "ui reply form", role: "form" }, url: message_path, remote: true) do |f| %> 
      
        <div class="field">
          <div class="ui fluid icon input">
            <%= f.text_field :body, placeholder: "Enter a message..." %>
            <%= f.button '<i class="bordered inverted green edit icon"></i>'.html_safe %>
             
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="item">
            Messages: <span class="counter"><%= @messages.count %></span>
          </a>
          <a class="item">
            Friends: <span class="counter"><%= @users.count %></span>
          </a>
        </div>
      </div >
    </div >
  </div>
</div>