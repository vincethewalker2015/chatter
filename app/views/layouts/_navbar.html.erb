<div class="ui small menu inverted">
  <div class= "ui container">
    
      <%= link_to "Chatroom", root_path, class: "item"  %>
      
    <a class="item">
      Messages
    </a>
    
    
    <div class="right menu">
      <div class="ui dropdown item">
        Account <i class="dropdown icon"></i>
        <div class="menu">
          <% if logged_in? %>
            <%= link_to "Log Out", login_path, method: :delete, class: "item" %>
            
          <% else %>
          <%= link_to "Log in", login_path, class: "item"  %>
          <%= link_to "Sign Up", "#" %>
          <% end %>
        </div>
      </div>
      
     <% unless logged_in? %>
       <div class="item">
          <div class="ui green button">Sign up</div>
      </div>
     <% end %>
     
  </div>
   <div class="right ui label black">
    <%=  current_user.username if current_user %>
  </div>
  </div>
  
</div>
